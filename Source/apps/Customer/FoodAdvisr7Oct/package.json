{
  "name": "com.foodadvisr.main",
  "version": "2.1.17",
  "displayName": "FoodAdvisr",
  "cordova": {
    "platforms": [
      "ios",
      "android",
      "browser"
    ],
    "plugins": {
      "cordova-plugin-device": {},
      "cordova-plugin-geolocation": {
        "GEOLOCATION_USAGE_DESCRIPTION": "We use your location to help improve our data accuracy"
      },
      "cordova-plugin-network-information": {},
      "cordova-plugin-statusbar": {},
      "cordova-plugin-whitelist": {},
      "phonegap-plugin-barcodescanner": {
        "CAMERA_USAGE_DESCRIPTION": "Scan QR-Codes"
      },
      "cordova-plugin-camera": {
        "PHOTOLIBRARY_USAGE_DESCRIPTION": "App would like to access the library to store screenshot results.",
        "CAMERA_USAGE_DESCRIPTION": "we use camera to scan barcode of products to give accurrate results."
      }
    }
  },
  "dependencies": {
    "cordova-android": "^6.3.0",
    "cordova-browser": "^5.0.1",
    "cordova-ios": "^4.5.2",
    "cordova-plugin-camera": "^2.4.1",
    "cordova-plugin-device": "~1.1.5",
    "cordova-plugin-geolocation": "~2.4.3",
    "cordova-plugin-network-information": "1.3.3",
    "cordova-plugin-statusbar": "~2.2.0",
    "cordova-plugin-whitelist": "~1.3.2",
    "phonegap-plugin-barcodescanner": "~6.0.5"
  }
}